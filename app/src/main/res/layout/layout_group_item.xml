<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/group_item_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/group_item_progress_static_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_item_name_textview"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Progress: "/>

    <TextView
        android:id="@+id/group_item_progress_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_item_name_textview"
        android:layout_toRightOf="@id/group_item_progress_static_textview"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"/>

</RelativeLayout>